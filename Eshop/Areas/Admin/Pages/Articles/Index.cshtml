@page "{handler?}"
@using Common.Application.DateUtil
@model Eshop.Areas.Admin.Pages.Article.IndexModel
@{
    ViewData["title"] = "مدیریت مقالات";
    ViewData["selected"] = "Articles";
}

<section class="content-header">
    <h1>
        @ViewData["title"]
        <small>
            <strong>تعداد مقالات : <span class="text-green" style="font-size:15px">@Model.ArticlesViewModel.EntityCount.ToString("#,0")</span></strong>
        </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> پنل ادمین</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content container-fluid bg-white" id="container">
    <a class="btn btn-success btn-flat mt-2 mb-4" href="/Admin/Articles/Add">
        <i class="fa fa-plus"></i>
        افزودن مقاله
    </a>
    <div class="box box-border custom-shadow">
        <form id="filter" method="get">
            <input type="hidden" name="pageId" id="pageId" value="@Model.ArticlesViewModel.CurrentPage" />
            <div class="box-header with-border">
                <h3 class="box-title">فیلتر</h3>
                <div class="box-tools pull-right">
                    <a href="/Admin/Articles" class="btn btn-sm btn-danger btn-flat">
                        حذف
                        <i class="fa fa-close">
                        </i>
                    </a>
                    <button type="submit" class="btn btn-sm btn-primary btn-flat">
                        فیلتر
                        <i class="fa fa-search">
                        </i>
                    </button>

                </div>
            </div>
            <div class="box-body" style="">
                <div class="table-filter">
                    <div class="row">
                        <div class="col-md-4 form-input">
                            <label>عنوان :</label>
                            <input placeholder="عنوان مقاله : " name="title" asp-for="ArticlesViewModel.Title" type="text" class="form-control" />
                        </div>
                        <div class="col-md-4 form-input">
                            <label>شناسه :</label>
                            <input placeholder="شناسه مقاله : " type="text" name="articleId" asp-for="ArticlesViewModel.Id" class="form-control" />
                        </div>
                        <div class="col-md-4 form-input">
                            <label> نوع جستوجو :</label>
                            <select class="form-control" name="searchType" asp-for="ArticlesViewModel.SearchType">
                                <option value="all">همه</option>
                                <option value="active">فقط پست های فعال</option>
                                <option value="deActive">فقط پست های غیر فعال</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <div class="box box-warning">
        <div class="box-body table-responsive no-padding">
            <table class="table table-bordered table-hover text-center">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>نویسنده</th>
                        <th>تاریخ ثبت</th>
                        <th>تاریخ انتشار</th>
                        <th>url</th>
                        <th>پست ویزه</th>
                        <td>وضعیت</td>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ArticlesViewModel.Articles)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.User.Name @item.User.Family</td>
                            <td>@item.CreationDate.ToPersianDate("ds dd ms Y")</td>
                            <td>@item.DateReals.ToPersianDate("ds dd ms Y")</td>
                            <td>
                                <strong class="text-success">@item.Url</strong>
                            </td>
                            <td>
                                @if (item.IsSpecial)
                                {
                                    <b><i class="fa fa-check text-success"></i></b>
                                }
                                else
                                {
                                    <b><i class="fa fa-close text-danger"></i></b>

                                }
                            </td>
                            <td>
                                @if (item.IsShow)
                                {
                                    <span class="label label-success">فعال</span>
                                }
                                else
                                {
                                    <span class="label label-danger">غیر فعال</span>

                                }
                            </td>
                            <td>
                                <a onclick="deleteArticle(@item.Id)" class="btn btn-sm btn-danger no-margin"><i class="fa fa-trash"></i></a>
                                <a href="/Admin/Articles/Edit/@item.Id" class="btn btn-sm bg-blue no-margin"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <partial name="Shared/_Paginat" model="Model.ArticlesViewModel" />
    </div>

</section>
                    <div class="container">
                        <h6>نظرات (@Model.Article.ArticleComments.Count)</h6>
                        <div class="rating-review-content">
                            <ul class="pl-0" id="comments">
                                @foreach (var item in Model.Article.ArticleComments.OrderByDescending(b => b.CreationDate))
                                {
                                    <li class="single-user-review d-flex">
                                        <div class="user-thumbnail mt-0"><img src="@Directories.GetUserAvatar(item.User.ImageName)" alt="@item.User.Name"></div>
                                        <div class="rating-comment">
                                            <p class="comment mb-0">@item.Text</p><span class="name-date">@item.User.Name @item.User.Family @item.CreationDate.ToPersianDateTime()</span>
                                        </div>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="ratings-submit-form bg-white py-3">
                    <div class="container">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <h6>ارسال نظر</h6>
                            <form method="post" id="send_comment">
                                <div class="mb-3">
                                    <input type="hidden" name="articleId" value="@Model.Article.Id" />
                                    <textarea class="form-control" id="comments" name="comment" cols="30" rows="10" placeholder="نظر خود را بنویسید ..."></textarea>
                                </div>
                                <button class="btn btn-sm btn-primary" type="submit">ارسال نظر</button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                برای ثبت نظر باید <a href="/Auth/Login?returnUrl=/mag/post/@Model.Article.Url#send_comment">وارد</a> حساب کاربری خود شوید
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>



    </div>


@model CoreLayer.DTOs.Pagination.BasePaging
@if (Model.PageCount > 1)
{
    <nav aria-label="Page navigation example ">
        <ul class="pagination pl-2">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item ">
                    <a onclick="changePage('@((Model.CurrentPage-1))')" class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (var i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @((Model.CurrentPage==i?"active":""))">
                    <a class="page-link" onclick="changePage('@i')" href="javascript:void(0)">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.PageCount)
            {
                <li class="page-item ">
                    <a onclick="changePage('@((Model.CurrentPage+1))')" class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}

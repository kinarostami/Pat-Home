@using Common.Application.FileUtil
@using Common.Application.DateUtil
@model CoreLayer.DTOs.Mag.ArticleCard
<div class="card blog-card">

    <div class="post-img">
        <img src="@Directories.GetArticleImage(Model.ImageName)" alt="@Model.Title">
    </div>
    <div class="post-content">
        <div class="bg-shapes">
            <div class="circle1"></div>
            <div class="circle2"></div>
            <div class="circle3"></div>
            <div class="circle4"></div>
        </div>
        <a class="post-catagory d-block" href="/mag?category=@Model.EnglishGroupTitle">@Model.CategoryName </a>
        <a class="post-title d-block" href="/mag/post/@Model.Url">@Model.Title</a>
        <div class="post-meta d-flex align-items-center justify-content-between flex-wrap mb-3">
            <a href="#"><i class="lni lni-user"></i>@Model.BuilderName</a><span><i class="lni lni-calendar"></i>@Model.CreateDate.ToPersianDate()</span>
        </div>
        <a class="btn btn-primary  btn-sm read-more-btn" href="/mag/post/@Model.Url"> بیشتر بخوانید</a>
    </div>
</div>
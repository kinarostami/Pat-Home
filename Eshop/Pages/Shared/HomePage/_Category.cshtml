@using Common.Application.FileUtil
@model List<DomainLayer.Models.Products.ProductGroup>
<div class="product-catagories-wrapper py-3">
    <div class="container">
        <div class="section-heading">
            <h6>دسته بندی محصولات</h6>
        </div>
        <div class="product-catagory-wrap">
            <div class="row g-3">
                @foreach (var item in Model)
                {
                    <div class="col-4">
                        <div class="card catagory-card">
                            <div class="card-body">
                                <a class="text-danger" href="/products?category=@item.GroupTitle">
                                    <img style="width: 80px;height: 80px"  src="@Directories.GetProductGroup(item.GroupImage)"/>
                                    <span class="mt-3">@item.GroupTitle</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
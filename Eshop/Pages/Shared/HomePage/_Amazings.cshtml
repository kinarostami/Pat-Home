@using Common.Application.FileUtil
@using Common.Application
@model List<CoreLayer.DTOs.Shop.ProductCardDto>
@if (Model.Any())
{
    <div class="flash-sale-wrapper">
        <div class="container">
            <div class="section-heading d-flex align-items-center justify-content-between">
                <h6 class="me-1 d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-lightning me-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09zM4.157 8.5H7a.5.5 0 0 1 .478.647L6.11 13.59l5.732-6.09H9a.5.5 0 0 1-.478-.647L9.89 2.41 4.157 8.5z" />
                    </svg>فروش ویژه
                </h6>
                <div class="end-date" data-date="@DateTime.Now.Date.Year/@DateTime.Now.Date.Month/@DateTime.Now.Day 24:00:00">
                    <ul class="sales-end-timer timer  ps-0 d-flex align-items-center ltr">
                        <li class="ml-2">زمان باقی مانده :</li>
                        <li class="ml-1 mr-1"><span class="hours "> 0 </span>:</li>
                        <li class="ml-1"><span class="minutes "> 0 </span>:</li>
                        <li><span class="seconds"> 0 </span></li>
                    </ul>
                </div>
            </div>
            <div class="flash-sale-slide owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="card flash-sale-card">
                        <div class="card-body">
                          
                            <a href="/Product/@item.ProductId/@item.Title.Trim().Replace(" ", "-")">
                              
                                <img class="brand-image" src="@Directories.GetBitMapProductImage(item.ProductImage)" alt="@item.Title"><span class="product-title">@item.Title</span>
                               
                                @if (item.NewPrice != null)
                                {
                                    <p class="sale-price">@item.NewPrice.TooMan() <span class="real-price">@item.Price.TooMan()</span></p>
                                }
                                else
                                {
                                    <p class="sale-price">
                                        @item.Price.TooMan()
                                    </p>
                                }
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
@page "{handler?}"
@using Common.Application
@using Common.Application.UserUtil
@using CoreLayer.Services.Wallets
@model Eshop.Pages.Payment.IndexModel
@inject IWalletService _Wallet
@{
    ViewData["title"] = "پرداخت و نهایی سازی سفارش";
    var walletAmount = _Wallet.BalanceWallet(User.GetUserId()).Result;
}
@section Header
{
    <partial name="Shared/SideBar/_SideBar" model="true" />
}
@if (Model.IsChanged)
{
    <div class="alert alert-danger">
        <i class="fa fa-warning"></i>
        <small>سبد خرید شما بروز رسانی شده است ، قبل پرداخت حتما آن را بازبینی کنید</small>
    </div>
}
<section class="container-fluid bkg p-0">
    <div class="row">
        <div class="col-lg-12 p-0 mb-3">
            <div class="bg-package d-flex align-items-center justify-content-center">
                <div class="breadcrumb radius15">
                    <ul class="d-flex align-items-center">
                        <li><a href="/">خانه</a></li>
                        <svg width="12" height="11" viewBox="0 0 12 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10.8019 6.17453H2.56566C2.00285 6.17453 1.53613 5.70782 1.53613 5.14501C1.53613 4.5822 2.00285 4.11548 2.56566 4.11548H10.8019C11.3647 4.11548 11.8314 4.5822 11.8314 5.14501C11.8314 5.70782 11.3647 6.17453 10.8019 6.17453Z" fill="#292D32" />
                            <path d="M5.31096 10.2918C5.05014 10.2918 4.78933 10.1958 4.58342 9.98985L0.465311 5.87174C0.067227 5.47366 0.067227 4.81476 0.465311 4.41667L4.58342 0.298563C4.98151 -0.099521 5.64041 -0.099521 6.03849 0.298563C6.43657 0.696647 6.43657 1.35554 6.03849 1.75363L2.64791 5.14421L6.03849 8.53479C6.43657 8.93287 6.43657 9.59177 6.03849 9.98985C5.83258 10.1958 5.57177 10.2918 5.31096 10.2918Z" fill="#292D32" />
                        </svg>
                        <li><a href="#" class="current">جزئیات پرداخت</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="text-lg-right text-center my-4">

    <div class="container">
        <div class="card p-5 p-checkout">
            <div class="row">

                <form method="post" class="contact-form d-flex justify-content-between form-checkout">

                    <div class="col-lg-8">
                        <p class="mb-3">جزئیات صورتحساب:</p>
                    </div>
                    @if (string.IsNullOrWhiteSpace(Model.Order.DiscountTitle))
                    {
                        <div class="card coupon-card mb-3">
                            <div class="card-body">
                                <div class="apply-coupon">
                                    <h6 class="mb-0">تخفیف دارید؟</h6>
                                    <p class="mb-2">کد تخفیف خود را اینجا وارد کنید و از تخفیف های عالی استفاده کنید!</p>
                                    <div class="coupon-form">
                                        <input class="form-control" id="discountCode" type="text" placeholder="SUHA30">
                                        <button class="btn btn-primary" onclick="ApplyDiscountCode()" type="button">درخواست دادن</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="card cart-amount-area">
                        <div class="card-body  align-items-center ">
                            <span> قیمت کالاها : <small>@Model.Order.Price.TooMan()</small></span>
                            <p class="m-0">هزینه ارسال : <small id="sendPrice">@Model.Order.ShippingCost.TooMan()</small></p>
                            @if (!string.IsNullOrWhiteSpace(Model.Order.DiscountTitle))
                            {
                                <p>تخفیف : <small>@Model.Order.GetDiscount.TooMan()</small></p>

                            }
                            @{
                                var orderPrice = Model.Order.Price + Model.Order.ShippingCost - Model.Order.GetDiscount;
                            }
                            @if (walletAmount > 0)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" checked="@(Model.Order.ByWallet ? "checked" : null)" id="useWallet" data-order-value="@orderPrice" data-wallet-value="@walletAmount" type="checkbox">
                                    <label class="form-check-label" for="useWallet">استفاده از کیف پول - <small>موجودی : @walletAmount.TooMan()</small></label>
                                </div>
                            }

                            <div class="card-footer">
                                <div class="row">
                                    <h5 class="total-price mb-0 col-7">
                                        @{
                                            var totalPrice = Model.Order.TotalPrice - Model.Order.WalletAmount;
                                        }
                                        <span id="order_totalPrice">@totalPrice.ToString("#,0")</span> تومان
                                    </h5>
                                    <button type="submit" class="btn btn-warning pull-left btn-sm col-5 h-fit">تأیید و پرداخت</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>

</section>